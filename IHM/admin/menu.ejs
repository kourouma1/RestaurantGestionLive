  <div class="container mt-5">
    <h2 class="mb-4">Définir le Menu du Jour</h2>
    <div class="row">
        <div class="col-md-6">
            <form>
                <div class="mb-3">
                    <label for="nomPlat" class="form-label">Nom du Plat</label>
                    <input type="text" class="form-control" id="nomPlat" placeholder="Entrez le nom du plat" required>
                </div>
                <div class="mb-3">
                    <label for="descriptionPlat" class="form-label">Description</label>
                    <textarea class="form-control" id="descriptionPlat" rows="3" placeholder="Décrivez le plat" required></textarea>
                </div>
                <div class="mb-3">
                    <label for="prixPlat" class="form-label">Prix</label>
                    <input type="number" class="form-control" id="prixPlat" placeholder="Entrez le prix" required>
                </div>
                <div class="mb-3">
                    <label for="imagePlat" class="form-label">Image du Plat</label>
                    <input type="file" class="form-control" id="imagePlat">
                </div>
                <button type="submit" class="btn btn-success w-100">Enregistrer</button>
            </form>
        </div>
        <div class="col-md-6">
            <h2 class="mb-4">Historique des Menus</h2>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Nom du Plat</th>
                        <th>Description</th>
                        <th>Prix</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>Exemple Plat 1</td>
                        <td>Délicieux plat avec des épices</td>
                        <td>15000</td>
                    </tr>
                    <tr>
                        <td>Exemple Plat 2</td>
                        <td>Un plat traditionnel savoureux</td>
                        <td>12000</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>