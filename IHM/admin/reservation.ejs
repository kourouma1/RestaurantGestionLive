<%- include('commun/header') %>
    
        <div class="main-content">
            <div class="container-fluid ">
                <%- include('commun/navbar') %>

                <!-- Header -->
            <div class="d-flex  justify-content-between align-items-center mb-4">
                <h1 class="h3">Statistique</h1>
                <button class="btn btn-danger">Déconnexion</button>
            </div>

            <hr>
           <!-- Overview Cards -->
        <div class="row mb-4">
            <div class="col-md-3 ">
                <div class="card text-center animate__animated animate__zoomIn bg-black">
                    <div class="card-body">
                        <h5 class="card-title text-warning">Commandes</h5>
                        <p class="card-text text-light">35</p>
                        <div class="spinner-border text-warning" role="status">
                            <span class="visually-hidden">Loading...</span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card text-center animate__animated animate__zoomIn bg-black">
                    <div class="card-body">
                        <h5 class="card-title text-warning">Produits</h5>
                        <p class="card-text text-light">120</p>
                        <div class="spinner-border text-warning" role="status">
                            <span class="visually-hidden">Loading...</span>
                        </div> 
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card text-center animate__animated animate__zoomIn bg-black">
                    <div class="card-body">
                        <h5 class="card-title text-warning">Utilisateurs</h5>
                        <p class="card-text text-light">50</p>
                        <div class="spinner-border text-warning" role="status">
                            <span class="visually-hidden">Loading...</span>
                        </div> 
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card text-center animate__animated animate__zoomIn bg-success">
                    <div class="card-body">
                        <h5 class="card-title text-warning">Revenus</h5>
                        <p class="card-text text-light">4.560</p>
                        <div class="spinner-border text-warning" role="status">
                            <span class="visually-hidden">Loading...</span>
                        </div> 
                    </div>
                </div>
            </div>
        </div>
        <hr>
        <h2 class="text-center mt-5">Gestion des Réservations</h2>
        <div class="row-cols-1">
            <button class="btn btn-success mb-3">Ajouter une Reservation</button>
            <input type="text" id="searchClient" class="form-control mb-3" placeholder="Rechercher un client...">
       
        </div>
        <table class="table table-striped mt-4">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Client</th>
                    <th>Date</th>
                    <th>Heure</th>
                    <th>Statut</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>1</td>
                    <td>Paul Martin</td>
                    <td>12/02/2025</td>
                    <td>19:00</td>
                    <td><span class="badge bg-warning badge-animated">En attente</span></td>
                    <td>
                        <button class="btn btn-success btn-sm">Confirmer</button>
                        <button class="btn btn-primary btn-sm">Modifier</button>
                        <button class="btn btn-danger btn-sm">Annuler</button>
                    </td>
                </tr>
                <tr>
                    <td>2</td>
                    <td>Lucie Bernard</td>
                    <td>14/02/2025</td>
                    <td>20:30</td>
                    <td><span class="badge bg-success">Confirmé</span></td>
                    <td>
                        <button class="btn btn-primary btn-sm">Modifier</button>
                        <button class="btn btn-danger btn-sm">Annuler</button>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
</div>
<script src="../assets/js/bootstrap.bundle.js"></script>
