  <!-- Modal de Commande -->
<div class="modal fade" id="orderModal" tabindex="-1" aria-labelledby="orderModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content" data-aos="zoom-in" data-aos-duration="800">
        <div class="modal-header">
          <h5 class="modal-title" id="orderModalLabel">Passer une commande</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <!-- Formulaire de Commande -->
          <form action="cmd" method="post">
            <div class="mb-3">
              <label for="dish" class="form-label">Choisissez votre plat</label>
              <select class="form-select" id="dish" name="plat" required>
                <option value="">Sélectionner un plat</option>
                <option value="pasta">Pâtes Carbonara</option>
                <option value="pizza">Pizza Margherita</option>
                <option value="salad">Salade César</option>
                <option value="burger">Burger Deluxe</option>
              </select>
            </div>
            <div class="mb-3">
              <label for="additions" class="form-label">Ajouter des garnitures</label>
              <select class="form-select" id="additions" name="garni">
                <option value="cheese">Fromage</option>
                <option value="mushrooms">Champignons</option>
                <option value="bacon">Bacon</option>
                <option value="avocado">Avocat</option>
              </select>
            </div>
            <div class="mb-3">
              <label for="specialInstructions" class="form-label">Instructions spéciales</label>
              <textarea class="form-control" name="instruct" id="specialInstructions" rows="3" placeholder="Exemple : Pas d'oignons, sauce à part..."></textarea>
            </div>
            <div class="mb-3">
              <label for="quantity" class="form-label">Quantité</label>
              <input name="qt" type="number" class="form-control" id="quantity" value="1" min="1" required>
            </div>
            <div class="mb-3">
              <p><u class="text-danger">NB:</u> Veillez consulter le menu du jour avant toute validation de commande !</p>
            </div>
            <button type="submit" class="btn btn-warning w-100">Passer la commande</button>
          </form>
        </div>
        
      </div>
    </div>
  </div>



