            <div class="modal-body">
                <table class="table table-bordered">
                    <thead >
                        <tr >
                           
                            <th class="bg-secondary">Plat</th>
                            <th class="bg-secondary">Quantité</th>
                            <th class="bg-secondary">Statut</th>
                            <th class="bg-secondary">Action</th>
                            
                        </tr>
                    </thead>
                    <tbody id="commandeTableBody">
                        <% for(i=0;i<results.length;i++){%>
                            <tr>
                            
                            <td><%= results[i].plats %></td>
                            <td><%= results[i].Quantite %></td>

                            <% if (results[i].statut=="annulée" ) {%>

                            <td class="bg-danger text-warning"><%= results[i].statut %></td>
                            <% }else{ %>
                              <td class="bg-dark text-warning"><%= results[i].statut %></td>
                              <% } %>
                              
                            <% if (results[i].statut!="livrer" && results[i].statut!="annulée") {%>
                              <td>
                                <button class="btn btn-danger" onclick="openDeleteModal('<%= results[i].commande_id %>')">SUPPRIMER</button>
                            </td>
                            <%}else{ %>

                              <td>
                                <p>aucune action requise</p>

                              </td>
                                
                            <% } %>
                            </tr>
                            
                        <%}%>
                    </tbody>
                </table>
                  </div>
        </div>
    </div>
</div>
